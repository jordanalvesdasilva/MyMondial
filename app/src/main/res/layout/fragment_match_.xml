<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Match_Fragment">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:id="@+id/TETE">
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/TimeMatch"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="5dp"
    android:layout_toLeftOf="@id/TimeMatch"
    android:layout_marginRight="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HomeTeamFlagMatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="..."
        android:textSize="20dp"
        android:id="@+id/HomeTeamMatch"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/ic_baseline_flag_24"
        android:id="@+id/HomeTeamFlagMatch"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

    <TextView
        android:id="@+id/ResultMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="  -  "
        android:layout_below="@id/TimeMatch"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/TimeMatch"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AwayTeamFlagMatch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="..."
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/AwayTeamMatch"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ic_baseline_flag_24"
            android:id="@+id/AwayTeamFlagMatch"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TETE"
        android:layout_marginTop="10dp"
        android:id="@+id/info"
        android:layout_centerHorizontal="true"
       >

        <ImageView
            android:id="@+id/information_icone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_info_details" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:layout_toRightOf="@id/information_icone"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="30dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info"
        >
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarSize="0dp"
            android:id="@+id/info_listview"
            tools:listitem="@layout/info_listview"
            />
    </RelativeLayout>


</RelativeLayout>