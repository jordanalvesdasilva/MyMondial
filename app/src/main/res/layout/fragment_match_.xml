<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Match_Fragment">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:id="@+id/TETE">
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/TimeMatch"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="5dp"
    android:layout_toLeftOf="@id/TimeMatch"
    android:layout_marginRight="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HomeTeamFlagMatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="..."
        android:textSize="20dp"
        android:id="@+id/HomeTeamMatch"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/ic_baseline_flag_24"
        android:id="@+id/HomeTeamFlagMatch"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

    <TextView
        android:id="@+id/ResultMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="  -  "
        android:layout_below="@id/TimeMatch"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/TimeMatch"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AwayTeamFlagMatch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="..."
            android:textSize="20dp"
            android:textAlignment="center"
            android:id="@+id/AwayTeamMatch"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ic_baseline_flag_24"
            android:id="@+id/AwayTeamFlagMatch"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/TETE"
    android:layout_marginTop="10dp"
    android:id="@+id/info"
    android:layout_centerHorizontal="true"
   >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/information">
        <ImageView
            android:id="@+id/information_icone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_info_details" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:layout_toRightOf="@id/information_icone"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="30dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/information"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/titre"
        android:layout_marginRight="30dp">
        <TextView
            android:id="@+id/homeTir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="0" />
        <TextView
            android:id="@+id/homeTirCadre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeTir"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="0" />
        <TextView
            android:id="@+id/homeCorner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeTirCadre"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="0" />
        <TextView
            android:id="@+id/homeCartonJaune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeCorner"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="0" />
        <TextView
            android:id="@+id/homeCartonRouge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeCartonJaune"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="0" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/information"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/titre">
        <TextView
            android:id="@+id/Tir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:text="Tir" />
        <TextView
            android:id="@+id/TirCadre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Tir"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Tir CadrÃ©" />
        <TextView
            android:id="@+id/Corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TirCadre"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Corner" />
        <TextView
            android:id="@+id/CartonJaune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Corner"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Carton Jaune" />
        <TextView
            android:id="@+id/CartonRouge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CartonJaune"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Carton Rouge" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/information"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/titre"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/awayTir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="0" />
        <TextView
            android:id="@+id/awayTirCdre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/awayTir"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="0" />
        <TextView
            android:id="@+id/awayCorner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/awayTirCdre"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="0" />
        <TextView
            android:id="@+id/awayCartonJaune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/awayCorner"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="0" />
        <TextView
            android:id="@+id/awayCartonRouge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/awayCartonJaune"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="0" />
    </RelativeLayout>
</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/info"
    android:layout_marginTop="20dp"
    android:id="@+id/scorers"
    android:layout_centerHorizontal="true"
    >

    <ImageView
        android:id="@+id/scorers_icone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_sports_soccer_24" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scorers"
        android:layout_toRightOf="@id/scorers_icone"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:id="@+id/scorers_text"
        android:textStyle="bold"
        />
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/scorers"
    >
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/RefreshMatch">
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp"
        android:id="@+id/info_listview"
        tools:listitem="@layout/info_listview" />
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>


</RelativeLayout>